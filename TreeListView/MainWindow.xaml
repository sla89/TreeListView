<Window x:Class="TreeListViewApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TreeListViewApp"
    Title="MainWindow" Height="350" Width="525">

    <TabControl>
        <TabItem Header="Slow">
            <controls:SlowTreeListView DataContext="{Binding }" />
        </TabItem>

        <TabItem Header="Fast">
            <controls:FastTreeListView DataContext="{Binding }" />
        </TabItem>
    </TabControl>
</Window>